<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-2"> <!-- offset means - left se space -->
            <br><br>
            <h3>Create a New Listing!</h3>
            <form method="POST" action="/listings"> 
            <div class="mb-3">
                <lable for="title" class="form-lable">Title</lable>
                <input name="listing[title]" placeholder="enter title" type="text" class="form-control">  <!-- listing - object [...] - key -->
            </div>

            <div class="mb-3">
                <lable for="description" class="form-lable">Description</lable>
                <textarea name="listing[description]" placeholder="enter description" type="text" class="form-control"></textarea>
            </div>

            <div class="mb-3">
            <lable for="description" class="form-lable">Image Link</lable>
            <input name="listing[image]" placeholder="enter image URL" type="text" class="form-control">
            </div>

            <div class="row"> <!-- for price and country to be in same line -->
                <div class="mb-3 col-md-4">
                <lable for="price" class="form-lable">Price</lable>
                <input name="listing[price]" placeholder="enter price" type="number" class="form-control">
                </div>
            
                <div class="mb-3 col-md-8">
                <lable for="country" class="form-lable">Country</lable>
                <input name="listing[country]" placeholder="enter country" type="text" class="form-control">
                </div>
            </div>
        
            <div class="mb-3">
            <lable for="location" class="form-lable">location</lable>
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control">
            </div>


            <button class="btn btn-dark add-btn mt-3"> save!</button>
            
        </form>
        </div>
    </div>
 
